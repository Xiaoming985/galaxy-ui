{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [ // 指定哪些文件需要被编译
    "**/*.ts", 
    "**/*.d.ts", 
    "**/*.tsx", 
    "**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
